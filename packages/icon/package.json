{
    "name": "@marshallku/icon",
    "version": "0.2.1",
    "sideEffects": false,
    "type": "module",
    "license": "MIT",
    "files": [
        "dist/**"
    ],
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "cp src/components/constants.ts dist && fantasticon && tsup src/components/index.tsx --format esm,cjs --dts --external react --minify",
        "prebuild": "mkdir -p dist",
        "postbuild": "pnpm run minify && node scripts/postbuild.js",
        "minify": "cleancss -o ./dist/icons.css ./dist/icons.css"
    },
    "devDependencies": {
        "@marshallku/tsconfig": "workspace:^",
        "@types/react": "^18.2.37",
        "@types/react-dom": "^18.2.15",
        "clean-css-cli": "^5.6.2",
        "fantasticon": "^2.0.0",
        "react": "^18.2.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
