${{ name }}-map: (
{{# each codepoints}}
    "{{ @key }}": "\\{{ codepoint this }}",
{{/ each}}
);

.{{ prefix }} {
    $self: &;
    line-height: 0;

    &::before {
        font-family: icons !important;
        font-style: normal;
        font-weight: normal !important;
        font-variant: normal;
        text-transform: none;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    {{# each codepoints }}
    &:global(.{{ ../prefix }}-{{ @key }}) {
        &:before {
            content: map-get(${{ ../name }}-map, {{ @key }});
        }
    }
    {{/ each}}
}