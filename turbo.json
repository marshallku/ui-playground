{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["CI", "NODE_ENV"],
    "pipeline": {
        "build": {
            "outputs": ["dist/**", "storybook-static/**", ".next/**", "!.next/cache/**", "public/dist/**"],
            "dependsOn": ["^build"]
        },
        "test": {
            "outputs": ["coverage/**"],
            "dependsOn": []
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        }
    }
}
